<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:background="@color/black">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_name_on_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="20dp"
        android:text="Player Name"
        android:fontFamily="@font/montserrat"
        android:textColor="#ffffff"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batting style"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@id/player_name_on_dialog"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/text_color"
        android:fontFamily="@font/montserrat"
        android:textSize="12dp"
        android:id="@+id/batting_style_heading"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="RHB"
        android:fontFamily="@font/montserrat"
        app:layout_constraintTop_toBottomOf="@id/batting_style_heading"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:id="@+id/batting_style_text"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0.1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/grey_color"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/line1divider"
        app:layout_constraintTop_toBottomOf="@id/batting_style_text"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bowling style"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@id/line1divider"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/text_color"
        android:fontFamily="@font/montserrat"
        android:id="@+id/bowling_style_heading"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="RHB"
        android:fontFamily="@font/montserrat"
        app:layout_constraintTop_toBottomOf="@id/bowling_style_heading"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:id="@+id/bowling_style_text"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0.1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/grey_color"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/line2divider"
        app:layout_constraintTop_toBottomOf="@id/bowling_style_text"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line2divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:text="close"
        android:id="@+id/close_button"
        android:fontFamily="@font/montserrat"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/button_text_color"/>


</androidx.constraintlayout.widget.ConstraintLayout>